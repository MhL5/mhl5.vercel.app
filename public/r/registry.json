      "cssVars": {
        "theme": {
          "--animate-scaleUpAndDown": "scaleUpAndDown 1.1s ease infinite",
          "--animate-pingMd": "pingMd 1.1s cubic-bezier(0, 0, 0.2, 1) infinite",
          "--animate-pingSm": "pingSm 1.1s cubic-bezier(0, 0, 0.2, 1) infinite",
          "--animate-circleSvgGrow": "circleSvgGrow 1200ms",
          "--animate-loadingFadeIn": "loadingFadeIn 500ms 600ms forwards, scaleUpAndDown 1.1s ease infinite"
        }
      },
      "css": {
        "@keyframes scaleUpAndDown": {
          "0%": {
            "transform": "scale(1)"
          },
          "55%": {
            "transform": "scale(1.07)"
          },
          "100%": {
            "transform": "scale(1)"
          }
        },
        "@keyframes pingMd": {
          "95%": {
            "transform": "scale(1.8)",
            "opacity": "0"
          },
          "100%": {
            "transform": "scale(1.8)",
            "opacity": "0"
          }
        },
        "@keyframes pingSm": {
          "95%": {
            "transform": "scale(1.5)",
            "opacity": "0"
          },
          "100%": {
            "transform": "scale(1.5)",
            "opacity": "0"
          }
        },
        "@keyframes circleSvgGrow": {
          "from": {
            "stroke-dasharray": "calc(var(--circumference) * 0), var(--circumference)"
          },
          "to": {
            "stroke-dasharray": "calc(var(--circumference) * 0.25), var(--circumference)"
          }
        },
        "@keyframes loadingFadeIn": {
          "from": {
            "opacity": "0"
          },
          "to": {
            "opacity": "1"
          }
        }
      }
    },
